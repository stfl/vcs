[user]
	name = Stefan Lendl
	email = ste.lendl@gmail.com
[push]
	default = matching
[merge]
	tool = diffconflicts
[diff]
	tool = gvimdiff
[core]
	editor = vim
[difftool]
	prompt = false
[alias]
   d = diff
	dt = difftool
   m = merge
   mt = mergetool
   s = status
   cam = commit -am
   c = commit
   co = checkout
   cl = clone
   br = branch
   l = log
   graph = log --graph --decorate --oneline --all
[mergetool "diffconflicts"]
	cmd = diffconflicts gvim $BASE $LOCAL $REMOTE $MERGED -f
	trustExitCode = true
	keepBackup = false

[user]
	name = Stefan Lendl
	email = ste.lendl@gmail.com
[github]
   user = stfl
[push]
	default = matching
[merge]
	tool = diffconflicts
[diff]
	tool = nvim -d
[core]
	editor = nvim
[difftool]
	prompt = false
[alias]
   d = diff
	dt = difftool
   m = merge
   mt = mergetool
   s = status
   cam = commit -am
   c = commit
   co = checkout
   cl = clone
   br = branch
   l = log --topo-order --pretty=format:'%C(bold)Commit:%C(reset) %C(green)%H%C(red)%d%n%C(bold)Author:%C(reset) %C(cyan)%an <%ae>%n%C(bold)Date:%C(reset)   %C(blue)%ai (%ar)%C(reset)%n%+B'
   pu = push
   pl = pull
   graph = log --graph --decorate --oneline --all
   lg = log --graph --all --pretty=format:'%Cred%h%Creset %Cgreen%ad%Creset -%C(bold cyan)%d%Creset %s %C(magenta)<%an>%Creset' --date=short
   ls = ls-files

[mergetool "diffconflicts"]
   # better work with vim-fugitive!
	cmd = diffconflicts nvim $BASE $LOCAL $REMOTE $MERGED
	trustExitCode = true
	keepBackup = false
   # exit with :cq to tell git that is has been resolved
[color]
	ui = auto

